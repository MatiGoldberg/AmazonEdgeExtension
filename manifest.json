{
    "manifest_version": 3,
    "name": "Amazon Order Exporter",
    "version": "1.0.0",
    "description": "Export Amazon orders and item details to a CSV format",
    "permissions": [
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://www.amazon.com/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/*"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ]
}